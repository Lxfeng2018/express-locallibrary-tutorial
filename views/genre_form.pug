extends layout

block content
	h1 #{title}
	
	form(method="POST" action="")
		div.form-group
			label(for="name") 类型名：
			input#name.form-control(type="text" placeholder="小说、诗歌等" name="name" required='true' value=(undefined===genre?"":genre.name))
		button.btn.btn-primary(type="submit") 提交
	
	if errors
		ul
			for error in errors
				li!= error.msg